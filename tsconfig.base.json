{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@prospector/heimdall-ts": ["libs/shared/heimdall-ts/src/index.ts"],
      "@prospector/ui-kit": ["libs/shared/ui-kit/src/index.ts"],
      "@prospector/crypto-vault": ["libs/core/client-vault/src/index.ts"],
      "@prospector/api-contracts": ["libs/domain/api-contracts/src/index.ts"],
      "@prospector/domain-billing": ["libs/domain/billing/src/index.ts"],
      "@prospector/domain-content": ["libs/domain/content/src/index.ts"],
      "@prospector/domain-gamification": ["libs/domain/gamification/src/index.ts"],
      "@prospector/domain-notification": ["libs/domain/notification/src/index.ts"],
      "@prospector/domain-social": ["libs/domain/social/src/index.ts"],
      "@prospector/api-client": ["libs/infra/api-client-ts/src/index.ts"],
      "@prospector/infra-supabase": ["libs/infra/supabase/src/index.ts"],
      "@prospector/ui-billing": ["libs/features/billing-ui/src/index.ts"],
      "@prospector/ui-content": ["libs/features/content-ui/src/index.ts"],
      "@prospector/ui-gamification": ["libs/features/gamification-ui/src/index.ts"],
      "@prospector/ui-notifications": ["libs/features/notifications-ui/src/index.ts"],
      "@prospector/ui-social": ["libs/features/social-ui/src/index.ts"],
      "@prospector/domain-ai-cortex": ["libs/domain/ai-cortex/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", ".next"]
}
