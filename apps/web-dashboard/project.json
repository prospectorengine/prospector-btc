{
  "name": "web-dashboard",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/web-dashboard",
  "targets": {
    "i18n-gen": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cross-env TS_NODE_COMPILER_OPTIONS=\"{\\\"module\\\":\\\"commonjs\\\",\\\"esModuleInterop\\\":true}\" ts-node --project tsconfig.base.json apps/web-dashboard/tools/scripts/generate-i18n.ts",
        "cwd": "."
      },
      "outputs": ["{workspaceRoot}/apps/web-dashboard/messages"]
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/web-dashboard"
      },
      "dependsOn": ["^build", "i18n-gen"],
      "configurations": {
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-dashboard:build",
        "dev": true
      },
      "dependsOn": ["i18n-gen"]
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc -p apps/web-dashboard/tsconfig.json --noEmit",
        "forwardAllArgs": false
      },
      "dependsOn": ["i18n-gen"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/web-dashboard/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/web-dashboard/jest.config.ts",
        "passWithNoTests": true
      },
      "dependsOn": ["i18n-gen"]
    }
  },
  "tags": ["layer:app", "type:app-web"]
}
